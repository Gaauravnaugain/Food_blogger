<section class="vh-100 vh-bg">
  <div class="container-fluid h-custom">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-md-9 col-lg-6 col-xl-5">
        <%#= image_tag 'bg.jpg', class: "img-fluid", alt: "img" %>
      </div>
      <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name),data:{turbo: false}) do |f| %>

          <h1 class="mb-4">Log in</h1>

          <div class="form-outline mb-4">
            <label class="form-label" for="form3Example3"><strong>Email address</strong></label>
            <%= f.email_field :email, autocomplete: true, class: "form-control form-control-lg", placeholder: "Enter a valid email address" %>
          </div>

          <div class="form-outline mb-3">
            <label class="form-label" for="form3Example4"><strong>Password</strong></label>
            <%= f.password_field :password, autocomplete: true, class: "form-control form-control-lg", placeholder: "Enter password" %>
          </div>

          <div class="d-flex justify-content-between align-items-center">
            <div class="form-check mb-0">
              <% if devise_mapping.rememberable? %>
                <%= f.check_box :remember_me, class: "form-check-input me-2" %>
                <%= f.label :remember_me, class: "form-check-label" %>
              <% end %>
            </div>
            <%= link_to "Forgot your password?", new_password_path(resource_name), class: "text-primary fw-bold text-decoration-none" %>
          </div>

          <div class="text-center text-lg-start mt-4 pt-2">
            <%= f.submit "Log in", url: users_path, data: { turbo: "false" } , class: "btn btn-primary btn-lg"%>
            <p class="small fw-bold mt-2 pt-1 mb-0">
              Don't have an account? 
              <%= link_to "Sign up", new_registration_path(resource_name), class: "text-primary" %>
            </p>
          </div>

        <% end %>

      </div>
    </div>
  </div>
</section>